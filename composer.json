{
    "name": "solidworx/toggler",
    "description": "Feature toggle library",
    "type": "library",
    "license": "MIT",
    "keywords": [
        "feature toggle",
        "feature switch",
        "feature library",
        "toggle",
        "switch",
        "feature"
    ],
    "authors": [
        {
            "name": "Pierre du Plessis",
            "email": "open-source@solidworx.co"
        }
    ],
    "autoload": {
        "psr-4": {
            "SolidWorx\\Toggler\\": "./src"
        }
    },
    "require": {
        "php": ">=7.1.0"
    },
    "require-dev": {
        "twig/twig": "^2.7 || ^3.0",
        "symfony/yaml": "^3.2 || ^4.0",
        "symfony/expression-language": "^3.2 || ^4.0",
        "symfony/framework-bundle": "^3.2 || ^4.0",
        "symfony/phpunit-bridge": "^4.1 || ^5.0",
        "predis/predis": "^1.1",
        "mikey179/vfsstream": "^1.6"
    },
    "suggest": {
        "twig/twig": "To use the twig extension",
        "symfony/yaml": "To pass yml files to the config",
        "symfony/symfony": "To enable Symfony integration",
        "symfony/expression-language": "To use expressions for conditions"
    },
    "extra": {
        "branch-alias": {
            "dev-master": "2.0-dev"
        }
    }
}
